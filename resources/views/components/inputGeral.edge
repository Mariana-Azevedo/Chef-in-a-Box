<label class="form-control w-full max-w-xs">
    <div class="label">
      <span class="label-text">{{ label }}</span>
    </div>
    <input 
      type="{{ type }}" 
      name="{{ name }}" 
      placeholder="{{ placeholder }}" 
      id="{{ id || '' }}" 
      class="input input-bordered w-full max-w-xs required" 
    />
  </label>
  